@model PizzariaMvc.Models.ViewModel.PedidoViewModel
@using PizzariaMvc.Data.Enum;

@{
    ViewData["Title"] = "Novo Pedido";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pedido.QtdPizzas" class="control-label"></label>
                <input asp-for="Pedido.QtdPizzas" class="form-control" />
                <span asp-validation-for="Pedido.QtdPizzas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.TamanhoPizza" class="control-label"></label>
            </div>
            <div>
                <select asp-for="Pedido.TamanhoPizza" asp-items="Html.GetEnumSelectList<TamanhoPizza>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.TrocoPara" class="control-label"></label>
                <input asp-for="Pedido.TrocoPara" class="form-control" />
                <span asp-validation-for="Pedido.TrocoPara" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Troco" class="control-label"></label>
                <input asp-for="Pedido.Troco" class="form-control" />
                <span asp-validation-for="Pedido.Troco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.ClienteId" class="control-label"></label>
                <select asp-for="Pedido.ClienteId" asp-items="@(new SelectList(Model.Cliente,"Id","Nome"))" class="form-control"></select>
            </div>
             <div class="form-group">
                <label asp-for="Pedido.PizzaId" class="control-label"></label>
                <select asp-for="Pedido.PizzaId" asp-items="@(new SelectList(Model.Pizza,"Id","Id"))" class="form-control"></select>
            </div>

            <table>
                <thead>
                    <dt>
                        @Html.DisplayNameFor(model => model.Data)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Data)
                    </dd>
                </thead>
            </table>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }