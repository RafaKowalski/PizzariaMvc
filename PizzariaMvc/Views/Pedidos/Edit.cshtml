@model PizzariaMvc.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>@ViewData["Title"]</h2>

<h4>Pedidos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QtdPizzas" class="control-label"></label>
                <input asp-for="QtdPizzas" class="form-control" />
                <span asp-validation-for="QtdPizzas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamanhoPizza" class="control-label"></label>
                <input asp-for="TamanhoPizza" class="form-control" />
                <span asp-validation-for="TamanhoPizza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrocoPara" class="control-label"></label>
                <input asp-for="TrocoPara" class="form-control" />
                <span asp-validation-for="TrocoPara" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Troco" class="control-label"></label>
                <input asp-for="Troco" class="form-control" />
                <span asp-validation-for="Troco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clientes" class="control-label"></label>
                <input asp-for="Clientes" class="form-control" />
                <span asp-validation-for="Clientes" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Pizzas" class="control-label"></label>
                <input asp-for="Pizzas" class="form-control" />
                <span asp-validation-for="Pizzas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }