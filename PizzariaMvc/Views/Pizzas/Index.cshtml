@model IEnumerable<PizzariaMvc.Models.Pizza>

@{
    ViewData["Title"] = "Pizzas";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Nova Pizza</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Sabor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TamanhoPizza)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Sabor)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.TamanhoPizza)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit </a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                    </td>
                </tr>
        }
    </tbody>
</table>