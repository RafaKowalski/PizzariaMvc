@model IEnumerable<PizzariaMvc.Models.Pizza>

@{
    ViewData["Title"] = "Pizzas";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default btn-lg">Cadastrar Novo Pedido</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TamanhoPizza)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamanhoPizza)
                    </td>
                </tr>
        }
    </tbody>
</table>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sabor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
       {
           <tr>
               <td>
                    @Html.DisplayFor(modelItem => item.Sabor)
               </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
               </td>
           </tr>  
       }
    </tbody>
</table>